<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_home_jdxp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/j10dp">

        <ImageView
            android:id="@+id/iv_home_jdxp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/j110dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_time_jdxp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/j10dp"
            android:text="结拍时间："
            android:textColor="@color/white"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:gravity="bottom"
            android:paddingLeft="@dimen/j10dp"
            android:paddingBottom="@dimen/j5dp">

            <TextView
                android:id="@+id/tv_name_jdxp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_price_jdxp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/j5dp"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <com.glavesoft.view.GridViewForNoScroll
        android:id="@+id/nsgv_home_jdxp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/j10dp"
        android:cacheColorHint="#00000000"
        android:gravity="center"
        android:horizontalSpacing="@dimen/j10dp"
        android:listSelector="#00000000"
        android:numColumns="3"
        android:scrollbars="none"
        android:stretchMode="columnWidth" />
</LinearLayout>

