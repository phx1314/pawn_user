<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/mLinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_home_grid"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j5dp"
            android:background="@drawable/shape_bottom"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/j2dp"
            android:paddingRight="@dimen/j2dp">

            <TextView
                android:id="@+id/tv_title_homegrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="大师傅大师傅大师傅"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_price_homegrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j5dp"
                android:layout_marginBottom="@dimen/j5dp"
                android:text="¥ 5000.00"
                android:textColor="#960909"
                android:textSize="10sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/mLinearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_top"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingLeft="@dimen/j2dp"
            android:paddingRight="@dimen/j2dp">

            <TextView
                android:id="@+id/tv_title_homegrid2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j5dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="12sp" />


            <TextView
                android:id="@+id/tv_price_homegrid2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j5dp"
                android:layout_marginBottom="@dimen/j5dp"
                android:text="¥ 5000.00"
                android:textColor="#960909"
                android:textSize="10sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_home_grid2"
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:layout_marginTop="@dimen/j5dp"
            android:scaleType="centerCrop" />


    </LinearLayout>
</LinearLayout>

