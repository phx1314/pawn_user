<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="@dimen/j14dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_white_rz"
                android:orientation="vertical"
                android:padding="@dimen/j15dp">

                <TextView
                    style="@style/text_style_15_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="退货信息"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTextView_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j17dp"
                    android:text="退款金额：  ￥10097.00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/text_style_15_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j17dp"
                    android:text="退货地址"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTextView_name"
                        style="@style/text_style_15_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王元" />

                    <TextView
                        android:id="@+id/mTextView_phone"
                        style="@style/text_style_15_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j30dp"
                        android:text="123132465465465" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mTextView_adress"
                    style="@style/text_style_15_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j12dp"
                    android:text="江苏省常州市钟楼区北港街道运河路278号" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j15dp"
                android:background="@drawable/shape_white_rz"
                android:orientation="vertical"
                android:padding="@dimen/j13dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j15dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/mImageView"
                        android:layout_width="@dimen/j72dp"
                        android:layout_height="@dimen/j72dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/j10dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/mTextView_pname"
                            style="@style/text_style_15_black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="欧米茄(OMEGA)瑞士手表 海马系列男表" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/j18dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="￥"
                                android:textColor="#B42929"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/mTextView_pprice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10097.00"
                                android:textColor="#B42929"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/mTextView_ddh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j17dp"
                    android:text="订单号：  ￥10097.00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTextView_ddstate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j17dp"
                    android:text="订单状态：  ￥10097.00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTextView_ddtime"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j17dp"
                    android:text="订单时间：  ￥10097.00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTextView_wldh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j17dp"
                    android:text="物流单号：  ￥10097.00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/mTextView_wlgs"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j17dp"
                    android:text="物流公司：  ￥10097.00"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/text_style_15_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j17dp"
                    android:text="收货地址信息"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j12dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/mTextView_name2"
                        style="@style/text_style_15_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="王元" />

                    <TextView
                        android:id="@+id/mTextView_phone2"
                        style="@style/text_style_15_black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/j30dp"
                        android:text="123132465465465" />
                </LinearLayout>

                <TextView
                    android:id="@+id/mTextView_adress2"
                    style="@style/text_style_15_black"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/j12dp"
                    android:text="江苏省常州市钟楼区北港街道运河路278号" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</LinearLayout>