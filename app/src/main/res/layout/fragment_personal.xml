<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:background="@color/bg_default2"
     android:orientation="vertical">

    <include layout="@layout/titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/ry_my_tologin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@color/blue"
                >
                <com.glavesoft.view.RoundImageView
                    android:id="@+id/my_photo"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/tx"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <TextView
                    android:id="@+id/tv_djdl_usernt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="点击登录"
                    android:textColor="@color/white"
                    android:layout_marginBottom="5dp"
                    android:textSize="18sp"
                    android:gravity="center|left"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/my_photo"
                    />

                <LinearLayout
                    android:id="@+id/tv_my_usern"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center|left"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/imageView4"
                    android:layout_toRightOf="@+id/my_photo"
                    android:visibility="gone"
                    >
                    <TextView
                        android:id="@+id/tv_my_usernt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="昵称："
                        android:textColor="@color/white"
                        android:layout_marginBottom="5dp"
                        android:textSize="16sp"
                       />
                    <TextView
                        android:id="@+id/tv_my_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        />

                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/bf_white_to"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:paddingRight="20dp"
                    android:id="@+id/imageView4" />
            </RelativeLayout>
            <LinearLayout
                android:id="@+id/ll_my_fabu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="20dp"
                android:background="@android:color/white"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/bf_wode_fabu"
                    android:drawablePadding="20dp"
                    android:textColor="@color/black1"
                    android:text="我的发布"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/xzz"
                    />
            </LinearLayout>
            <View style="@style/line"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:id="@+id/ll_my_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@android:color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/bf_wode_news"
                    android:drawablePadding="20dp"
                    android:textColor="@color/black1"
                    android:text="消息中心"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/xzz"
                    />
            </LinearLayout>
            <View style="@style/line"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:id="@+id/ll_my_ye"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@android:color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/bf_wode_yue"
                    android:drawablePadding="20dp"
                    android:textColor="@color/black1"
                    android:text="我的余额"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/xzz"
                    />
            </LinearLayout>
            <View style="@style/line"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:id="@+id/ll_my_collect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@android:color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/bf_wode_sc"
                    android:drawablePadding="20dp"
                    android:textColor="@color/black1"
                    android:text="我的收藏"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/xzz"
                    />
            </LinearLayout>
            <View style="@style/line"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:id="@+id/ll_my_feedback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@android:color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/bf_wode_fk"
                    android:drawablePadding="20dp"
                    android:textColor="@color/black1"
                    android:text="用户反馈"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/xzz"
                    />
            </LinearLayout>
            <View style="@style/line"
                android:layout_marginLeft="20dp"/>
            <LinearLayout
                android:id="@+id/personal_setting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@android:color/white"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:drawableLeft="@drawable/bf_wode_shez"
                    android:drawablePadding="20dp"
                    android:textColor="@color/black1"
                    android:text="系统设置"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/xzz"
                    />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
