<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/titlebar_ll_main"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/j45dp"
    android:background="@color/bg_title"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/titlebar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/j10dp"
            android:paddingRight="@dimen/j20dp"
            android:src="@drawable/top_fh"
            android:visibility="gone" />

        <TextView
            android:id="@+id/titlebar_left"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/j10dp"
            android:paddingRight="@dimen/j5dp"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titlebar_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:gravity="center"
            android:singleLine="true"
            android:text=""
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/ll_en"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/j4dp"
            android:gravity="center_vertical"
            android:visibility="gone">

            <View
                android:layout_width="@dimen/j45dp"
                android:layout_height="@dimen/j0_5dp"
                android:background="@color/white" />

            <ImageView
                android:id="@+id/iv_en"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j15dp"
                android:layout_marginRight="@dimen/j15dp" />

            <View
                android:layout_width="@dimen/j45dp"
                android:layout_height="@dimen/j0_5dp"
                android:background="@color/white" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/j10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/titlebar_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/j10dp"
            android:src="@drawable/bf_white_search"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/titlebar_kf"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/j10dp"
            android:src="@mipmap/kf1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/titlebar_publish"
            android:layout_width="@dimen/j40dp"
            android:layout_height="@dimen/j40dp"
            android:paddingLeft="@dimen/j10dp"
            android:paddingRight="@dimen/j10dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/titlebar_news"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/news"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/titlebar_share"
            android:layout_width="@dimen/j40dp"
            android:layout_height="@dimen/j40dp"
            android:paddingRight="@dimen/j10dp"
            android:src="@drawable/share1"
            android:visibility="gone" />

        <TextView
            android:id="@+id/titlebar_right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/j10dp"
            android:gravity="center_vertical"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />
    </LinearLayout>
</RelativeLayout>

