<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/black" android:orientation="vertical">
     <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:background="@drawable/shape_coner_white" android:orientation="vertical">
          <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="@dimen/j10dp" android:background="@drawable/shape_coner_white">
               <ImageView android:id="@+id/reply_finish" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/bf_del" android:padding="@dimen/j5dp" android:layout_alignParentTop="true" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" />
               <TextView android:id="@+id/reply_count" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="5条回复" android:textColor="@color/black1" android:textSize="16sp" android:layout_centerVertical="true" android:layout_centerHorizontal="true" />
          </RelativeLayout>
          <View style="@style/line" />
          <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:padding="@dimen/j10dp" android:orientation="horizontal">
               <com.glavesoft.view.RoundImageView android:id="@+id/reply_img" android:layout_width="@dimen/j30dp" android:layout_height="@dimen/j30dp" android:layout_marginRight="@dimen/j5dp" android:layout_alignParentLeft="true" android:layout_alignParentStart="true" android:layout_centerVertical="true" android:background="@drawable/tx" />
               <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical|top" android:orientation="horizontal">
                         <TextView android:id="@+id/reply_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="深夜流浪的猫" android:textColor="@color/blue" android:layout_weight="1" android:textSize="14sp" />
                         <ImageView android:id="@+id/reply_isPraise" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="@dimen/j5dp" android:paddingLeft="@dimen/j5dp" android:src="@drawable/bf_zan" />
                         <TextView android:id="@+id/reply_praiseCnt" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="9999" android:textColor="@color/text_gray" android:textSize="14sp" />
                    </LinearLayout>
                    <TextView android:id="@+id/reply_content" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="飞洒发的发生法萨芬四大复方丹参范德萨发阿萨德飞洒发的发送到发送到发送到发送到发范德萨范德萨发生打算的撒的" android:textColor="@color/black1" android:layout_marginTop="@dimen/j5dp" android:layout_marginBottom="@dimen/j5dp" android:textSize="16sp" />
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
                         <TextView android:id="@+id/reply_time" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black1" android:textSize="14sp" android:text="06-12 12:16" />
                         <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/shape_coner_gray_likebg" android:textSize="14sp" android:layout_marginLeft="@dimen/j10dp" android:paddingRight="@dimen/j5dp" android:paddingLeft="@dimen/j5dp" android:visibility="gone" android:text="5回复" />
                    </LinearLayout>
               </LinearLayout>
          </LinearLayout>
          <View style="@style/line" />
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="全部评论" android:textColor="@color/black1" android:textSize="16sp" android:padding="@dimen/j10dp" android:layout_centerVertical="true" android:layout_centerHorizontal="true" />
          <com.glavesoft.pullrefresh.PullToRefreshListView android:id="@+id/reply_refreshlistview" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" />
          <View style="@style/line" />
          <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:background="@color/white" android:padding="@dimen/j7dp">
               <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="center_vertical" android:paddingTop="@dimen/j8dp" android:paddingBottom="@dimen/j8dp" android:paddingLeft="@dimen/j10dp" android:paddingRight="@dimen/j10dp" android:background="@drawable/shape_coner_hui_kuang">
                    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@drawable/pinglun" />
                    <EditText android:id="@+id/et_reply_newsdetail" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:paddingLeft="@dimen/j5dp" android:paddingRight="@dimen/j5dp" android:background="@color/transparent" android:text="" android:textSize="14sp" android:textColor="@color/black1" android:imeOptions="actionSend" android:inputType="text" android:hint="写评论..." />
                    <ImageView android:id="@+id/iv_sendreply_newsdetail" android:layout_width="wrap_content" android:layout_height="wrap_content" android:paddingRight="@dimen/j5dp" android:paddingLeft="@dimen/j5dp" android:src="@drawable/send_off" />
               </LinearLayout>
               <ImageView android:id="@+id/iv_collection_pinglun" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/j10dp" android:padding="@dimen/j5dp" android:visibility="gone" android:src="@drawable/bf_pinglun" />
               <ImageView android:id="@+id/iv_praise" android:layout_width="wrap_content" android:layout_height="match_parent" android:paddingRight="@dimen/j5dp" android:paddingLeft="@dimen/j5dp" android:src="@drawable/bf_zan" />
          </LinearLayout>
     </LinearLayout>
</LinearLayout>

