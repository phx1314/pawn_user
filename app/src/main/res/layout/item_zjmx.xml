<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j10dp"
        android:paddingTop="@dimen/j20dp"
        android:paddingRight="@dimen/j10dp">

        <TextView
            android:id="@+id/mTextView_1"
            style="@style/text_style_15_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableLeft="@drawable/tx2"
            android:drawablePadding="@dimen/j7dp"
            android:gravity="center_vertical"
            android:text="提现金额:￥377" />

        <TextView
            android:id="@+id/mTextView_2"
            style="@style/text_style_13_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="提现方式:￥377" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/j13dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/j36dp"
        android:paddingRight="@dimen/j10dp"
        android:paddingBottom="@dimen/j20dp">

        <TextView
            android:id="@+id/mTextView_3"
            style="@style/text_style_11_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="提现流水号：1223344566 拷贝"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/mTextView_4"
            style="@style/text_style_11_gray"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="2020-06-01 15：30"
            android:textSize="12sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="@dimen/j35dp"
        android:background="#ECECEC" />
</LinearLayout>

