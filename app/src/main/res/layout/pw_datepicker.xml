<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/white" android:orientation="vertical">
     <LinearLayout android:layout_width="match_parent" android:layout_height="40dip" android:background="@color/white">
          <Button android:id="@+id/btn_dcancel" android:layout_width="0dip" android:layout_height="match_parent" android:layout_weight="1" android:textColor="@color/black1" android:background="@null" android:gravity="left|center_vertical" android:text="取消" android:layout_marginLeft="20dip" android:textSize="16sp" />
          <Button android:id="@+id/btn_dconfirm" android:layout_width="0dip" android:layout_height="match_parent" android:layout_weight="1" android:background="@null" android:layout_marginRight="20dip" android:textColor="@color/black1" android:gravity="right|center_vertical" android:text="确定" android:textSize="16sp" />
     </LinearLayout>
     <View style="@style/line" />
     <LinearLayout android:layout_width="match_parent" android:layout_height="180dip" android:gravity="center" android:orientation="horizontal">
          <com.glavesoft.view.PickerView android:id="@+id/pv_year" android:layout_width="0dp" android:layout_height="@dimen/j150dp" android:layout_weight="1.2" />
          <com.glavesoft.view.PickerView android:id="@+id/pv_month" android:layout_width="0dp" android:layout_height="@dimen/j150dp" android:layout_weight="1" />
          <com.glavesoft.view.PickerView android:id="@+id/pv_date" android:layout_width="0dp" android:layout_height="@dimen/j150dp" android:layout_weight="1" />
     </LinearLayout>
</LinearLayout>

