<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_home_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_home_video"
            android:layout_width="match_parent"
            android:layout_height="@dimen/j150dp"
            android:scaleType="centerCrop" />

        <ImageView
            android:layout_width="@dimen/j50dp"
            android:layout_height="@dimen/j50dp"
            android:layout_gravity="center"
            android:background="@drawable/spbf" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="#50000000"
            android:padding="@dimen/j8dp">

            <TextView
                android:id="@+id/tv_name_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>
    </FrameLayout>

    <com.glavesoft.view.GridViewForNoScroll
        android:id="@+id/nsgv_home_video"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/j5dp"
        android:background="@color/white"
        android:cacheColorHint="#00000000"
        android:gravity="center"
        android:horizontalSpacing="@dimen/j5dp"
        android:listSelector="#00000000"
        android:numColumns="2"
        android:scrollbars="none"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/j5dp" />
</LinearLayout>

