<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical" android:padding="@dimen/j10dp" android:background="@color/white">
     <ImageView android:id="@+id/iv_pic_contract" android:layout_width="@dimen/j90dp" android:layout_height="@dimen/j90dp" android:layout_marginBottom="@dimen/j2dp" android:scaleType="centerCrop" android:src="@drawable/bg_livecountdown" />
     <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
          <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_weight="1" android:paddingLeft="@dimen/j8dp" android:paddingRight="@dimen/j8dp">
               <TextView android:id="@+id/tv_name_contract" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="16sp" android:textColor="@color/black1" android:text="" />
               <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j2dp" android:textSize="12sp" android:textColor="@color/black" android:text="当款：" />
                    <TextView android:id="@+id/tv_price_contract" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j2dp" android:textSize="12sp" android:textColor="@color/red" android:text="" />
               </LinearLayout>
               <TextView android:id="@+id/tv_code_contract" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j10dp" android:textSize="12sp" android:textColor="@color/black" android:text="当号：" />
               <TextView android:id="@+id/tv_time_contract" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j2dp" android:gravity="center" android:layout_gravity="bottom" android:textColor="@color/black" android:textSize="12sp" android:text="签订时间：" />
          </LinearLayout>
     </LinearLayout>
</LinearLayout>

