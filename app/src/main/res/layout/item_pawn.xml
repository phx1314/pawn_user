<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/j16dp"
    android:paddingTop="@dimen/j10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_pic_pawn"
            android:layout_width="@dimen/j110dp"
            android:layout_height="@dimen/j110dp"
            android:layout_marginBottom="@dimen/j2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_livecountdown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <View style="@style/line" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/j8dp"
                    android:paddingTop="@dimen/j3dp"
                    android:paddingRight="@dimen/j5dp"
                    android:paddingBottom="@dimen/j8dp">

                    <TextView
                        android:id="@+id/tv_name_pawn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:singleLine="true"
                        android:text="翡翠手镯"
                        android:textColor="@color/black1"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/j5dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="鉴定价："
                            android:textColor="@color/text_gray"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_jdprice_pawn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:singleLine="true"
                            android:text="￥5万"
                            android:textColor="@color/red_k"
                            android:textSize="13sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_isyj_pawn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/j5dp"
                        android:text="已邮寄"
                        android:textColor="@color/text_gray"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_ysh_pawn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/j5dp"
                        android:text="已赎回"
                        android:textColor="@color/red_k"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_num_pawn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/j5dp"
                        android:singleLine="true"
                        android:text="13次出价"
                        android:textColor="@color/text_gray"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_yffdj_pawn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/j5dp"
                        android:singleLine="true"
                        android:text="已发放当金"
                        android:textColor="@color/text_gray"
                        android:textSize="13sp"
                        android:visibility="gone" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_countTime_pawn"
                            android:layout_width="@dimen/j140dp"
                            android:layout_height="@dimen/j23dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/shape_green_kuang"
                            android:gravity="center"
                            android:text="10：20：20后结束"
                            android:textColor="@color/green_bg"
                            android:textSize="13sp"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/tv_endTime_pawn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:gravity="center"
                            android:text="到期时间：10天"
                            android:textColor="@color/text_gray"
                            android:textSize="13sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="bottom"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/j5dp">

                    <TextView
                        android:id="@+id/tv_dkpz_pawn"
                        style="@style/myappraisal"
                        android:background="@drawable/shape_green2"
                        android:text="打款凭证"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_ckdp_pawn"
                        style="@style/myappraisal"
                        android:background="@drawable/shape_green2"
                        android:text="典当凭证"
                        android:textColor="@color/white" />

                    <TextView
                        android:id="@+id/tv_xd_pawn"
                        style="@style/myappraisal"
                        android:background="@drawable/shape_green2"
                        android:text="续当" />

                    <TextView
                        android:id="@+id/tv_sd_pawn"
                        style="@style/myappraisal"
                        android:background="@drawable/shape_green2"
                        android:text="赎当" />

                    <TextView
                        android:id="@+id/tv_td_pawn"
                        style="@style/myappraisal"
                        android:background="@drawable/shape_green2"
                        android:text="平台托底"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_qh_pawn"
                        style="@style/myappraisal"
                        android:background="@drawable/shape_green2"
                        android:text="取回"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/tv_qdd_pawn"
                        style="@style/myappraisal"
                        android:background="@drawable/shape_green2"
                        android:text="去典当"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="@dimen/j10dp"
        android:background="@color/gray" />
</LinearLayout>