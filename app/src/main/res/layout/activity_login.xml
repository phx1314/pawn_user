<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_title"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <include layout="@layout/titlebar" />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/login_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_login"
                android:layout_width="@dimen/j79dp"
                android:layout_height="@dimen/j79dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/j50dp"
                android:scaleType="fitXY"
                android:src="@drawable/dl_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j45dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j40dp"
                android:layout_marginRight="@dimen/j25dp"
                android:background="@drawable/shape"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/j20dp"
                    android:src="@drawable/login_phone" />

                <ImageView
                    android:layout_width="@dimen/j1dp"
                    android:layout_height="@dimen/j27dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/j8dp"
                    android:background="@color/bg_title" />

                <EditText
                    android:id="@+id/dl_phone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/j45dp"
                    android:layout_marginLeft="@dimen/j8dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入您的手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j45dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j20dp"
                android:layout_marginRight="@dimen/j25dp"
                android:background="@drawable/shape"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j20dp"
                    android:src="@drawable/login_locked" />

                <ImageView
                    android:layout_width="@dimen/j1dp"
                    android:layout_height="@dimen/j27dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/j8dp"
                    android:background="@color/bg_title" />

                <EditText
                    android:id="@+id/dl_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/j45dp"
                    android:layout_marginLeft="@dimen/j8dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_forgetPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/j15dp"
                android:layout_marginRight="@dimen/j30dp"
                android:text="忘记密码"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/button_dl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j45dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j30dp"
                android:layout_marginRight="@dimen/j25dp"
                android:background="@drawable/shape_login"
                android:gravity="center"
                android:text="登录"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/bt_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j45dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j20dp"
                android:layout_marginRight="@dimen/j25dp"
                android:background="@drawable/shape_regist"
                android:gravity="center"
                android:text="注册"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j60dp"
                android:layout_marginBottom="@dimen/j20dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/j20dp"
                android:paddingRight="@dimen/j20dp">

                <LinearLayout
                    android:id="@+id/ll_wx_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/j70dp"
                        android:layout_height="@dimen/j70dp"
                        android:src="@mipmap/weixin_login" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_qq_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/j70dp"
                        android:layout_height="@dimen/j70dp"
                        android:src="@mipmap/qq_login" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>

