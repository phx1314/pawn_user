<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:zhy="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_marginTop="7dp"
                android:id="@+id/head_img"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/tx" />
        <LinearLayout
            android:paddingLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="153******27"
                android:paddingTop="7dp"
                android:textSize="15sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:paddingTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/iv_comment_star_1"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_comment_star_red" />

                <ImageView
                    android:id="@+id/iv_comment_star_2"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_comment_star_red" />

                <ImageView
                    android:id="@+id/iv_comment_star_3"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_comment_star_red" />

                <ImageView
                    android:id="@+id/iv_comment_star_4"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_comment_star_red" />

                <ImageView
                    android:id="@+id/iv_comment_star_5"
                    android:layout_width="11dp"
                    android:layout_height="11dp"
                    android:layout_marginRight="5dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/icon_comment_star_red" />
            </LinearLayout>
        </LinearLayout>
            
        </LinearLayout>

        <TextView
            android:id="@+id/time"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2017.02.19"
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv_goodsname"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="翡翠"
            android:layout_marginBottom="10dp"
            android:textSize="12sp"
            android:textColor="@color/black"/>
        <!--<ImageView-->
            <!--android:layout_width="18dp"-->
            <!--android:layout_height="18dp"-->
            <!--android:layout_marginLeft="7dp"-->
            <!--android:layout_marginTop="26dp"-->
            <!--android:src="@mipmap/vip" />-->
    </RelativeLayout>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/black"
        android:text="宝贝收到很满意，店家服务热情，发货速度快，物流也给力，赞赞赞。" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:visibility="gone">


        <TextView
            android:id="@+id/choose"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="颜色：蓝/白 尺码：42"
            android:textSize="12sp" />
    </LinearLayout>

    <com.zhy.view.flowlayout.TagFlowLayout
        android:id="@+id/flowview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="14dp"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginTop="4dp"
        android:background="@android:color/white"
        zhy:max_select="-1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#fff3f3f3" />
</LinearLayout>