<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:gravity="center" android:background="#80000000" android:orientation="vertical">
     <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="@dimen/j20dp" android:layout_centerInParent="true" android:background="@drawable/coner_text_bg1" android:gravity="center" android:orientation="vertical">
          <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/j35dp" android:src="@mipmap/ts" />
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginBottom="@dimen/j20dp" android:text="请仔细核对身份信息是否一致" android:textColor="#D71303" android:textSize="21sp" />
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="注：如出现身份信息错误导致的后果" android:textColor="@color/black1" android:textSize="16sp" />
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j5dp" android:text="本公司将不承担任何责任" android:textColor="@color/black1" android:textSize="16sp" />
          <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="vertical" android:layout_marginTop="@dimen/j30dp">
               <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center">
                    <Button android:id="@+id/btn_ok" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@mipmap/qd" android:gravity="center" />
               </LinearLayout>
               <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center" android:layout_marginTop="@dimen/j10dp" android:layout_marginBottom="@dimen/j20dp">
                    <Button android:id="@+id/btn_cancel" android:layout_width="wrap_content" android:layout_height="wrap_content" android:background="@mipmap/qx" android:gravity="center" />
               </LinearLayout>
          </LinearLayout>
     </LinearLayout>
</LinearLayout>

