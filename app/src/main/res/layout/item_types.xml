<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="wrap_content">
     <FrameLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="#F5F5F5">
          <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:gravity="center_vertical">
               <ImageView android:id="@+id/iv_pic_types" android:layout_width="@dimen/j110dp" android:layout_height="@dimen/j70dp" android:layout_margin="@dimen/j10dp" android:scaleType="centerCrop" />
               <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
                    <TextView android:id="@+id/tv_name_types" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textColor="@color/black1" android:textSize="18sp" android:text="奢饰品珠宝" />
                    <TextView android:id="@+id/tv_pp_types" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j20dp" android:textColor="@color/text_gray" android:textSize="12sp" android:text="卡地亚/宝利格等" />
               </LinearLayout>
          </LinearLayout>
          <ImageView android:id="@+id/iv_yj_types" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="right" android:paddingTop="@dimen/j8dp" android:paddingBottom="@dimen/j8dp" android:src="@drawable/youji" android:visibility="gone" />
          <TextView android:id="@+id/tv_yj_types" android:layout_width="@dimen/j75dp" android:layout_height="@dimen/j20dp" android:layout_gravity="right" android:layout_marginTop="@dimen/j7dp" android:gravity="center" android:text="邮寄鉴定" android:textColor="@color/white" android:textSize="13sp" android:background="@drawable/shape_red2" android:visibility="gone" />
     </FrameLayout>
</LinearLayout>

