<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fitsSystemWindows="true" android:background="@color/bg_default">
     <include layout="@layout/titlebar" />
     <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/white" android:layout_marginTop="@dimen/j10dp" android:paddingLeft="@dimen/j10dp" android:paddingRight="@dimen/j10dp" android:paddingTop="@dimen/j15dp" android:paddingBottom="@dimen/j15dp">
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="起价" android:textColor="@color/black1" android:textSize="16sp" />
          <TextView android:id="@+id/tv_qprice_offer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="right" android:textColor="@color/red_k" android:text="￥5000" android:textSize="16sp" />
     </LinearLayout>
     <View style="@style/line" />
     <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/white" android:layout_marginTop="@dimen/j1dp" android:paddingLeft="@dimen/j10dp" android:paddingRight="@dimen/j10dp" android:paddingTop="@dimen/j15dp" android:paddingBottom="@dimen/j15dp">
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="当前价" android:textColor="@color/black1" android:textSize="16sp" />
          <TextView android:id="@+id/tv_newprice_offer" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:gravity="right" android:textColor="@color/red_k" android:text="￥50000" android:textSize="16sp" />
     </LinearLayout>
     <View style="@style/line" />
     <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/white" android:layout_marginTop="@dimen/j10dp" android:paddingLeft="@dimen/j10dp" android:paddingRight="@dimen/j10dp" android:paddingTop="@dimen/j15dp" android:paddingBottom="@dimen/j15dp">
          <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="您的出价" android:textColor="@color/black1" android:textSize="16sp" />
          <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j5dp">
               <EditText android:id="@+id/et_price" android:layout_width="match_parent" android:layout_height="@dimen/j35dp" android:layout_weight="1" android:gravity="center_vertical" android:layout_marginLeft="@dimen/j5dp" android:paddingLeft="@dimen/j15dp" android:paddingRight="@dimen/j15dp" android:background="@drawable/shape_coner_gray" android:hint="请输入价格&gt;当前价" android:textSize="16sp" android:textColor="@color/black1" android:textColorHint="#A3A3A3" android:maxLines="1" />
               <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="@dimen/j10dp" android:text="元" android:textSize="16sp" android:textColor="@color/black1" />
          </LinearLayout>
     </LinearLayout>
     <LinearLayout android:id="@+id/ll_reg_agree" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j1dp" android:gravity="center_vertical" android:padding="@dimen/j10dp" android:background="@color/white">
          <CheckBox android:id="@+id/cb_offer_agree" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical" android:button="@drawable/select_checkbox1" android:checked="false" android:text=" 同意" android:textColor="@color/text_gray" android:textSize="13sp" />
          <TextView android:id="@+id/tv_offer_agreement" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:text="绝当竞买协议条款" android:textColor="@color/red_k" android:textSize="14sp" />
     </LinearLayout>
     <TextView android:id="@+id/tv_submit_offer" android:layout_width="match_parent" android:layout_height="@dimen/j40dp" android:layout_marginLeft="@dimen/j25dp" android:layout_marginRight="@dimen/j25dp" android:layout_marginTop="@dimen/j20dp" android:layout_marginBottom="@dimen/j20dp" android:gravity="center" android:text="确认出价" android:textColor="@android:color/white" android:background="@drawable/shape_red" android:textSize="16sp" />
</LinearLayout>

