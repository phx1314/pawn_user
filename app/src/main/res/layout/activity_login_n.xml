<?xml version="1.0" encoding="UTF-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_default"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/j250dp"
        android:background="@drawable/bg_yuan_" />

    <ImageView
        android:id="@+id/mImageView_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/j15dp"
        android:src="@drawable/back_" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/mImageView_back"
        android:layout_marginTop="@dimen/j35dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/j48dp"
            android:layout_marginLeft="@dimen/j15dp"
            android:layout_marginRight="@dimen/j15dp"
            android:background="@drawable/shape_gray"
            android:orientation="horizontal"
            android:padding="@dimen/j6dp">

            <TextView
                android:id="@+id/mTextView_dl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="登录"
                android:textColor="#283962"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/mTextView_zc"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="注册"
                android:textColor="#555555"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLinearLayout_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j16dp"
            android:layout_marginTop="@dimen/j30dp"
            android:layout_marginRight="@dimen/j16dp"
            android:background="@drawable/shape_white_rz"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_login"  android:elevation="@dimen/j3dp"
                android:layout_width="@dimen/j79dp"
                android:layout_height="@dimen/j79dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/j17dp"
                android:scaleType="fitXY"
                android:src="@drawable/mr_logo" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j40dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j15dp"
                android:layout_marginRight="@dimen/j25dp"
                android:background="@drawable/shape"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/j5dp"
                    android:src="@drawable/login_phone" />


                <EditText
                    android:id="@+id/dl_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/j8dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入您的手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="#222222"
                    android:textColorHint="#999999"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/j22dp"
                android:layout_marginRight="@dimen/j22dp"
                android:background="#E5E5E5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j40dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j20dp"
                android:layout_marginRight="@dimen/j25dp"
                android:background="@drawable/shape"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j5dp"
                    android:src="@drawable/login_locked" />

                <EditText
                    android:id="@+id/dl_pwd"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/j8dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:textColor="#222222"
                    android:textColorHint="#999999"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/j22dp"
                android:layout_marginRight="@dimen/j22dp"
                android:background="#E5E5E5" />

            <TextView
                android:id="@+id/tv_forgetPwd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="@dimen/j12dp"
                android:layout_marginRight="@dimen/j30dp"
                android:text="忘记密码"
                android:textColor="#555555"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/button_dl"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j45dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j25dp"
                android:layout_marginRight="@dimen/j25dp"
                android:background="@drawable/shape_login"
                android:gravity="center"
                android:text="登录"
                android:textColor="@android:color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j20dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/j20dp"
                android:paddingRight="@dimen/j20dp">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/j15dp"
                    android:layout_marginRight="@dimen/j15dp"
                    android:text="第三方登录" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/line_" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/j15dp"
                android:layout_marginBottom="@dimen/j20dp"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/j20dp"
                android:paddingRight="@dimen/j20dp">

                <LinearLayout
                    android:id="@+id/ll_wx_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/j70dp"
                        android:layout_height="@dimen/j70dp"
                        android:src="@drawable/weixin_" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_qq_login"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/j70dp"
                        android:layout_height="@dimen/j70dp"
                        android:src="@drawable/qq_" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mLinearLayout_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"  android:elevation="@dimen/j3dp"
            android:layout_marginLeft="@dimen/j16dp"
            android:layout_marginTop="@dimen/j30dp"
            android:layout_marginRight="@dimen/j16dp"
            android:background="@drawable/shape_white_rz"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j40dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j29dp"
                android:layout_marginRight="@dimen/j25dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/j5dp"
                    android:src="@drawable/login_phone" />


                <EditText
                    android:id="@+id/et_reg_phone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/j8dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入您的手机号"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:textColor="#222222"
                    android:textColorHint="#999999"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/tv_reg_yzm"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/j25dp"
                    android:layout_marginLeft="@dimen/j5dp"
                    android:gravity="center"
                    android:text="获取验证码"
                    android:textColor="#F4C29F"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/j22dp"
                android:layout_marginRight="@dimen/j22dp"
                android:background="#E5E5E5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j40dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j15dp"
                android:layout_marginRight="@dimen/j25dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/j5dp"
                    android:src="@drawable/yzm_" />


                <EditText
                    android:id="@+id/et_reg_yzm"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/j8dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入验证码"
                    android:inputType="number"
                    android:maxLines="1"
                    android:textColor="#222222"
                    android:textColorHint="#999999"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/j22dp"
                android:layout_marginRight="@dimen/j22dp"
                android:background="#E5E5E5" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j40dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j15dp"
                android:layout_marginRight="@dimen/j25dp"
                android:background="@drawable/shape"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/j5dp"
                    android:src="@drawable/login_locked" />


                <EditText
                    android:id="@+id/et_reg_psw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/j8dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请输入密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="#222222"
                    android:textColorHint="#999999"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/j22dp"
                android:layout_marginRight="@dimen/j22dp"
                android:background="#E5E5E5" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/j40dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j15dp"
                android:layout_marginRight="@dimen/j25dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/j5dp"
                    android:src="@drawable/login_locked" />


                <EditText
                    android:id="@+id/et_reg_pswagain"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/j8dp"
                    android:background="@null"
                    android:gravity="center_vertical"
                    android:hint="请再次输入密码"
                    android:inputType="textPassword"
                    android:maxLines="1"
                    android:textColor="#222222"
                    android:textColorHint="#999999"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="@dimen/j22dp"
                android:layout_marginRight="@dimen/j22dp"
                android:background="#E5E5E5" />

            <LinearLayout
                android:id="@+id/ll_reg_agree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j20dp"
                android:gravity="center_vertical">

                <CheckBox
                    android:id="@+id/cb_reg_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/select_checkbox"
                    android:checked="true"
                    android:gravity="center_vertical"
                    android:text=" 同意"
                    android:textColor="#222222"
                    android:textSize="13sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_reg_agreement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dip"
                        android:text="拍当网用户注册协议，"
                        android:textColor="#283962"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tv_reg_privacy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="隐私政策"
                        android:textColor="#283962"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/bt_register"
                android:layout_width="match_parent"
                android:layout_height="@dimen/j45dp"
                android:layout_marginLeft="@dimen/j25dp"
                android:layout_marginTop="@dimen/j25dp"
                android:layout_marginRight="@dimen/j25dp"
                android:layout_marginBottom="@dimen/j20dp"
                android:background="@drawable/shape_login"
                android:gravity="center"
                android:text="确定"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

