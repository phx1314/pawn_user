<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fitsSystemWindows="true">

    <include layout="@layout/titlebar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10dp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="身份证正面："
                android:textColor="@color/black1"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_zm_addpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jtp"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/iv_zm_showpic"
                android:layout_width="270dp"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jtp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="身份证反面："
                android:textColor="@color/black1"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_fm_addpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jtp"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/iv_fm_showpic"
                android:layout_width="270dp"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jtp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="手持身份证照："
                android:textColor="@color/black1"
                android:textSize="16sp"/>

            <ImageView
                android:id="@+id/iv_sc_addpic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jtp"
                android:scaleType="centerCrop"
                />

            <ImageView
                android:id="@+id/iv_sc_showpic"
                android:layout_width="270dp"
                android:layout_height="140dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/jtp"
                android:scaleType="centerCrop"
                android:visibility="gone"
                />

        </LinearLayout>

    </ScrollView>


    <TextView
        android:id="@+id/tv_submit_bd"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="确认绑定"
        android:textColor="@android:color/white"
        android:background="@drawable/shape_red"
        android:textSize="16sp"
        />


</LinearLayout>