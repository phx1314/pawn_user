<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_bg"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_home_rzsc_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j3dp"
            android:layout_marginTop="@dimen/j10dp"
            android:layout_marginRight="@dimen/j3dp"
            android:singleLine="true"
            android:text="和田玉"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_home_rzsc_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/j3dp"
            android:layout_marginTop="@dimen/j9dp"
            android:layout_marginRight="@dimen/j3dp"
            android:singleLine="true"
            android:text="和田玉"
            android:textColor="@color/black"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/mImageView"
            android:layout_width="@dimen/j60dp"
            android:layout_height="@dimen/j60dp"
            android:layout_marginTop="@dimen/j12dp"
            android:layout_marginBottom="@dimen/j8dp" />
    </LinearLayout>

</LinearLayout>

