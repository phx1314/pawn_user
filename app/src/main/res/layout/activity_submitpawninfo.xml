<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent" android:fitsSystemWindows="true">
     <include layout="@layout/titlebar" />
     <ScrollView android:layout_width="match_parent" android:layout_height="match_parent" android:background="@color/bg_default">
          <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
               <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:background="@color/white" android:padding="@dimen/j10dp" android:layout_marginTop="@dimen/j10dp">
                    <TextView android:id="@+id/tv_name_pawninfo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:text="翡翠手镯" android:textSize="16sp" android:textColor="@color/black1" />
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j8dp">
                         <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="鉴定价：" android:textSize="14sp" android:textColor="@color/red_k" />
                         <TextView android:id="@+id/tv_jdprice_pawninfo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="￥50000" android:textSize="17sp" android:textColor="@color/red_k" />
                    </LinearLayout>
                    <com.glavesoft.view.GridViewForNoScroll android:id="@+id/gv_pics_pawninfo" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j10dp" android:cacheColorHint="#00000000" android:columnWidth="@dimen/j150dp" android:gravity="center" android:listSelector="#00000000" android:numColumns="3" android:scrollbars="none" android:stretchMode="columnWidth" android:verticalSpacing="@dimen/j15dp" android:background="@color/white" />
               </LinearLayout>
               <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j10dp" android:padding="@dimen/j10dp" android:background="@color/white">
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                         <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="期望当金：" android:textSize="14sp" android:textColor="@color/text_gray" />
                         <TextView android:id="@+id/tv_money_pawninfo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="14sp" android:textColor="@color/red_k" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j5dp">
                         <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="期望费率：" android:textSize="14sp" android:textColor="@color/text_gray" />
                         <TextView android:id="@+id/tv_ll_pawninfo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="14sp" android:textColor="@color/red_k" />
                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j5dp">
                         <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="典当时长：" android:textSize="14sp" android:textColor="@color/text_gray" />
                         <TextView android:id="@+id/tv_timelong_pawninfo" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textSize="14sp" android:textColor="@color/red_k" />
                    </LinearLayout>
               </LinearLayout>
               <LinearLayout android:id="@+id/ll_reg_agree" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="@dimen/j10dp" android:gravity="center_vertical" android:padding="@dimen/j10dp" android:background="@color/white" android:visibility="gone">
                    <CheckBox android:id="@+id/cb_pawn_agree" android:layout_width="wrap_content" android:layout_height="wrap_content" android:gravity="center_vertical" android:button="@drawable/select_checkbox1" android:checked="false" android:text=" 同意" android:textColor="@color/text_gray" android:textSize="13sp" />
                    <TextView android:id="@+id/tv_pawn_agreement" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="5dip" android:text="典当条款" android:textColor="@color/red_k" android:textSize="14sp" />
               </LinearLayout>
               <TextView android:id="@+id/tv_submit_pawninfo" android:layout_width="match_parent" android:layout_height="@dimen/j40dp" android:layout_marginLeft="@dimen/j25dp" android:layout_marginRight="@dimen/j25dp" android:layout_marginTop="@dimen/j20dp" android:layout_marginBottom="@dimen/j20dp" android:gravity="center" android:text="确认发布" android:textColor="@android:color/white" android:background="@drawable/shape_red" android:textSize="16sp" />
          </LinearLayout>
     </ScrollView>
</LinearLayout>

